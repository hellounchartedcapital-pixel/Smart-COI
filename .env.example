# Smart-COI Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Supabase Configuration
# =============================================================================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# OPTIONAL - Error Monitoring (Sentry)
# =============================================================================
# If not set, errors will only be logged to console in development
REACT_APP_SENTRY_DSN=

# =============================================================================
# OPTIONAL - Debug Mode
# =============================================================================
# Set to 'true' to enable verbose logging in development
REACT_APP_DEBUG=false

# =============================================================================
# SUPABASE EDGE FUNCTIONS - Set these in Supabase Dashboard > Edge Functions
# =============================================================================
# RESEND_API_KEY=your-resend-api-key
# FROM_EMAIL=SmartCOI <noreply@yourdomain.com>
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
# APP_URL=https://smartcoi.io
